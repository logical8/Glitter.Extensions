<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1;net6.0;net7.0;net48</TargetFrameworks>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Glitter.Extensions</Title>
    <Authors>tacosontitan</Authors>
    <Description>A collection of extension methods that encapsulate common boilerplate when working with concrete .NET types.</Description>
    <Copyright>Copyright Â© 2023 tacosontitan and contibutors</Copyright>
    <PackageProjectUrl>https://glitter.tacosontitan.com/</PackageProjectUrl>
    <PackageIcon>logo-round.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/tacosontitan/Glitter.Extensions</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>framework;csharp;dotnet;extensions;extensibility;extension-methods;netstandard20</PackageTags>
    <PackageReleaseNotes>Initial release.</PackageReleaseNotes>
    <AssemblyVersion>2023.1.0.0</AssemblyVersion>
    <FileVersion>2023.1.0.0</FileVersion>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\resources\logo-round.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
